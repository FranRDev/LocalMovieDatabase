<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.monroy.lmdb.vista_controlador.RaizControlador">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" styleClass="menu-item" text="Archivo">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#manejadorRefrescar" text="Refrescar" />
                  <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem mnemonicParsing="false" onAction="#manejadorSalir" text="Salir" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Informes">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#manejadorReportes" text="Generar" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
